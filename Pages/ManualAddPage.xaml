<Page x:Class="CN_GreenLumaGUI.Pages.ManualAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CN_GreenLumaGUI.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="ManualAddPage"
      d:DesignHeight="450"
      d:DesignWidth="800"
      FontFamily="/Fonts/#阿里巴巴普惠体"
      mc:Ignorable="d">

    <Grid Width="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- 顶部提示 -->
        <TextBlock Grid.Row="0"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"
                   FontSize="18"
                   Foreground="#3e3e3e"
                   Text="{Binding PageTitle}" />
        <!-- 中部输入栏 -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top">

            <DockPanel Margin="0,5,0,5" HorizontalAlignment="Stretch">
                <TextBlock VerticalAlignment="Center"
                           FontSize="16"
                           TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                           Text="{Binding NameTextBoxTitle}" />
                <TextBox Margin="12,5,10,5"
                         IsEnabled="{Binding NoBatchAdd}"
                         IsReadOnly="{Binding BatchAdd}"
                         Padding="5"
                         VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="{DynamicResource Manual_NamePlaceholder}"
                         materialDesign:TextFieldAssist.TextBoxViewMargin="5,0,0,0"
                         materialDesign:TextFieldAssist.HasClearButton="False"
                         TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                         Text="{Binding ItemNameString}"
                         FontSize="16"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" />
            </DockPanel>
            <DockPanel Margin="0,5,0,5" HorizontalAlignment="Stretch" Visibility="{Binding NoBatchAddVisibility}">
                <TextBlock VerticalAlignment="Center" FontSize="16" TextBlock.Foreground="{DynamicResource MaterialDesignBody}" Text="{DynamicResource Manual_AppIDLabel}" />
                <TextBox Margin="12,5,10,5"
                         Padding="5"
                         VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="{DynamicResource Manual_AppIDPlaceholder}"
                         materialDesign:TextFieldAssist.TextBoxViewMargin="5,0,0,0"
                         materialDesign:TextFieldAssist.HasClearButton="False"
                         TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                         Text="{Binding AppIdString}"
                         FontSize="16"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" />
            </DockPanel>
            <Grid Margin="0,5,0,5" HorizontalAlignment="Stretch" Visibility="{Binding BatchAddVisibility}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="16" TextBlock.Foreground="{DynamicResource MaterialDesignBody}" Text="{DynamicResource Manual_AppIDLabel}" />
                <TextBox Grid.Column="1"
                 Margin="12,5,10,5"
                 Padding="5"
                 materialDesign:HintAssist.Hint="{DynamicResource Manual_RangeStartPlaceholder}"
                 materialDesign:TextFieldAssist.TextBoxViewMargin="5,0,0,0"
                 materialDesign:TextFieldAssist.HasClearButton="False"
                 TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                 Text="{Binding RangeStartString}"
                 FontSize="16"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <TextBlock Grid.Column="2"
                   VerticalAlignment="Center" Width="20" FontSize="16" TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
            -
                </TextBlock>
                <TextBox Grid.Column="3"
                 Margin="0,5,10,5"
                 Padding="5"
                 materialDesign:HintAssist.Hint="{DynamicResource Manual_RangeEndPlaceholder}"
                 materialDesign:TextFieldAssist.TextBoxViewMargin="5,0,0,0"
                 materialDesign:TextFieldAssist.HasClearButton="False"
                 TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                 Text="{Binding RangeEndString}"
                 FontSize="16"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}" />
            </Grid>
            <DockPanel Margin="0,5,0,5" HorizontalAlignment="Stretch" Visibility="{Binding ItemKindSwitchVisibility}">
                <TextBlock Margin="0,0,32,0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                           Text="{DynamicResource Manual_ItemTypeLabel}" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="{DynamicResource Manual_TypeGame}" TextBlock.Foreground="{DynamicResource MaterialDesignBody}" />
                    <ToggleButton Width="40" Margin="16,0,16,0" IsChecked="{Binding IsDlcAppItem}" />
                    <TextBlock VerticalAlignment="Center" Text="{DynamicResource Manual_TypeDLC}" TextBlock.Foreground="{DynamicResource MaterialDesignBody}" />
                </StackPanel>
            </DockPanel>
            <StackPanel Orientation="Horizontal">
                <CheckBox IsEnabled="{Binding AddModel}" IsChecked="{Binding BatchAdd}" Content="{DynamicResource Manual_BatchAdd}" Height="30" Visibility="{Binding DlcMasterVisibility}" />
                <TextBlock FontStyle="Italic" FontSize="10" Foreground="Gray" Margin="20,0,0,0" VerticalAlignment="Center" Visibility="{Binding NoBatchAddEnableVisibility}" Text="{DynamicResource Manual_BatchAddNote}" />
            </StackPanel>
            <DockPanel Margin="0,5,0,5" HorizontalAlignment="Stretch" Visibility="{Binding DlcMasterVisibility}">
                <TextBlock VerticalAlignment="Center" FontSize="16" TextBlock.Foreground="{DynamicResource MaterialDesignBody}" Text="{DynamicResource Manual_BelongsToLabel}" />
                <ComboBox Margin="12,5,10,5"
                          materialDesign:HintAssist.Hint="{DynamicResource Manual_SelectGamePlaceholder}"
                          materialDesign:TextFieldAssist.HasClearButton="True"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          ItemsSource="{Binding GameSelectBoxList}">
                    <ComboBox.SelectedItem>
                        <Binding Path="SelectedGameItem" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">

                        </Binding>
                    </ComboBox.SelectedItem>
                </ComboBox>
            </DockPanel>
        </StackPanel>
        <!-- 底部工具栏 -->
        <UniformGrid Grid.Row="2"
                     Height="50"
                     HorizontalAlignment="Stretch"
                     Rows="1">
            <Button Height="35"
                    Margin="10,0,10,10"
                    Background="#f44b56"
                    BorderThickness="0"
                    TextBlock.Foreground="White"
                    Command="{Binding CancelCmd}">
                <materialDesign:PackIcon Width="25" Height="25" Kind="Cancel" />
            </Button>
            <Button Height="35"
                    Margin="10,0,10,10"
                    BorderThickness="0"
                    TextBlock.Foreground="White"
                    Command="{Binding SaveItemCmd}">
                <materialDesign:PackIcon Width="25" Height="25" Kind="ContentSave" />
            </Button>
        </UniformGrid>
    </Grid>

</Page>
